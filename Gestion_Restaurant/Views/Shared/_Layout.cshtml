@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GESTION RESTAURANTE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if(Context.Session.GetString("rol") != null)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="@Context.Session.GetString("rol")" asp-action="index">
                        <img src="~/img/restorant.png" width="80" height="80"/>
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Persona" asp-action="Login">
                        <img src="~/img/restorant.png" width="80" height="80" />
                    </a>
                }
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("rol") == null)
                        {
                            <li>
                                <a href="~/Platos/index" class="nav-link text-dark">MENU</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") == "cliente")
                        {
                            //PONER LOS ME GUSTA EN LA LISTA DE PLATOS
                            <li>
                                <a href="~/cliente/VerServicios" class="nav-link text-dark">SERVICIOS ENTRE FECHAS</a>
                            </li>
                            <li>
                                <a href="~/cliente/SolicitarServicio" class="nav-link text-dark">SOLICITAR SERVICIO</a>
                            </li>
                            <li>
                                <a href="~/cliente/SolicitarDelivery" class="nav-link text-dark">SOLICITAR DELIVERY</a>
                            </li>
                            <li>
                                <a href="~/cliente/MostrarMayorPrecioServicio" class="nav-link text-dark">SERVICIOS MAS CAROS</a>
                            </li>
                            <li>
                                <a href="~/cliente/MostrarPlatosUnaVez" class="nav-link text-dark">SERVICIOS POR PLATO</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") != null)
                        {
                            <li>
                                <a href="~/Persona/Logout" class="nav-link text-dark">SALIR</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Restaurante - Diego Rey, Nicolas Cozzo y Nicolas Gula. 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
