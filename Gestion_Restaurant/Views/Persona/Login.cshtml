@{
}

<h1 class="text-center">INGRESAR</h1>

<form class="text-center" action="" method="post">

    <div class="mb-3">
        <label for="nombreUsuario">Nombre usuario</label><br />
        <input type="text" name="nombreUsuario" id="nombreUsuario" placeholder="Ingrese Usuario" />
    </div>
    
    <div class="mb-3">
        <label for="password">Password</label><br />
        <input type="password" name="password" id="password" placeholder="Ingrese el password" />
    </div>
    
    <button type="submit" class="btn btn-primary">Ingresar</button>

</form>

<br />

<p class="text-center">Aun no tienes cuenta? <a href="~/Persona/AltaCliente">REGISTRATE</a></p>

<br />

@if (ViewBag.Error == true)
{
<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Ooops!</h4>
    <p>Los datos ingresados no coinciden con ningun usuario registrado.</p>
    <p>Por favor reingresa los datos.</p>
</div>
}




